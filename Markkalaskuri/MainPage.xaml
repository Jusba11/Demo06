        <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" Margin="78,316,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" TextAlignment="Center" SelectionChanged="textBlock3_SelectionChanged" FontSize="18" Text="0&#xD;&#xA;"/>

